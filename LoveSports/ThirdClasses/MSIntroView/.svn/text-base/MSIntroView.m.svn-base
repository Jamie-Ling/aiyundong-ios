+ (EAIntroView *) initWithType: (MSIntroViewType ) type rootView:(UIView *)rootView  delegate:(id<EAIntroDelegate> ) delegate
{
    switch (type) {
        case showIntroWithCrossDissolve:
            return [MSIntroView showIntroWithCrossDissolve:delegate rootView:rootView];
            break;
        case showCustomIntro:
            return [MSIntroView showCustomIntro:delegate rootView:rootView];
            break;
        case showIntroWithCustomPages:
            return [MSIntroView showIntroWithCustomPages:delegate rootView:rootView];
            break;
        case showIntroWithCustomView:
            return [MSIntroView showIntroWithCustomView:delegate rootView:rootView];
            break;
        case showIntroWithCustomViewFromNib:
            return [MSIntroView showIntroWithCustomViewFromNib:delegate rootView:rootView];
            break;
        case showIntroWithFixedTitleView:
            return [MSIntroView showIntroWithFixedTitleView:delegate rootView:rootView];
            break;
        case showIntroWithSeparatePagesInitAndPageCallback:
            return [MSIntroView showIntroWithSeparatePagesInitAndPageCallback:delegate rootView:rootView];
            break;
        default:
            break;
    }


    return nil;
}


+ (EAIntroView *)showIntroWithCrossDissolve:(id<EAIntroDelegate> ) delegate rootView:(UIView *) rootView {
    EAIntroPage *page1 = [EAIntroPage page];
    page1.title = @"Hello world";
    page1.desc = sampleDescription1;
    page1.bgImage = [UIImage imageNamed:@"bg1"];
    page1.titleIconView = [[UIImageView alloc] initWithImage:[UIImage imageNamed:@"title1"]];
    
    EAIntroPage *page2 = [EAIntroPage page];
    page2.title = @"This is page 2";
    page2.desc = sampleDescription2;
    page2.bgImage = [UIImage imageNamed:@"bg2"];
    page2.titleIconView = [[UIImageView alloc] initWithImage:[UIImage imageNamed:@"title2"]];
    
    EAIntroPage *page3 = [EAIntroPage page];
    page3.title = @"This is page 3";
    page3.desc = sampleDescription3;
    page3.bgImage = [UIImage imageNamed:@"bg3"];
    page3.titleIconView = [[UIImageView alloc] initWithImage:[UIImage imageNamed:@"title3"]];
    
    EAIntroPage *page4 = [EAIntroPage page];
    page4.title = @"This is page 4";
    page4.desc = sampleDescription4;
    page4.bgImage = [UIImage imageNamed:@"bg4"];
    page4.titleIconView = [[UIImageView alloc] initWithImage:[UIImage imageNamed:@"title4"]];
    
    EAIntroView *intro = [[EAIntroView alloc] initWithFrame:rootView.bounds andPages:@[page1,page2,page3,page4]];
    [intro setDelegate:delegate];
    
    [intro showInView:rootView animateDuration:0.3];
    return intro;
}


+ (EAIntroView *)showIntroWithFixedTitleView :(id<EAIntroDelegate> ) delegate rootView:(UIView *) rootView {
